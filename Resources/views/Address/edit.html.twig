{% extends 'LthrtContactBundle:Address:address.html.twig' %}

{% block body -%}
    <h1>Address Edit</h1>
    {{ form_start(form) }}
    {{ form_row(form.line) }}
    {{ form_row(form.line2) }}
    {{ form_row(form.zip) }}
    {{ form_row(form.addressType) }}
    {{ form_row(form.city) }}
    {{ form_row(form.state) }}
    {{ form_rest(form) }}
    {{ form_end(form) }}

    <ul class="record_actions">
    <li>
        <a href="{{ path('address') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
