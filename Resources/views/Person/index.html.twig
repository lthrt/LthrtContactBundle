{% extends 'LthrtContactBundle:Person:person.html.twig' %}

{% block body -%}
    <h1>Person list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Dob</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for person in personCollection %}
            <tr>
                <td><a href="{{ path('person_show', { 'person': person.id }) }}">{{ person.firstName }}</a></td>
                <td>{{ person.lastName }}</td>
                <td>{% if person.dob %}{{ person.dob|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('person_show', { 'person' : person.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('person_edit', { 'person' : person.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('person_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock body %}
