{% extends 'LthrtContactBundle:Contact:contact.html.twig' %}

{% block contentbody -%}
    <h1>Contact</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Active</th>
                <td>{{ contact.active }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ contact.value }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('contact_list') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('contact_edit', { 'contact' : contact.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock contentbody %}
