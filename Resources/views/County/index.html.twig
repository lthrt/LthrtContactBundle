{% extends 'LthrtContactBundle:County:county.html.twig' %}

{% block body -%}
    <h1>County list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for county in countyCollection %}
            <tr>
                <td><a href="{{ path('county_show', { 'county': county.id }) }}">{{ county.name }}</a></td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('county_show', { 'county' : county.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('county_edit', { 'county' : county.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('county_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock body %}
