.bar {
  fill: steelblue;
}

rect.bar:hover {
    opacity: 0.5;
    filter: alpha(opacity=40);
}

.axis {
  font: 10px sans-serif;
}

text.bar-label {
    color:#000000;
}

.axis path,
.axis line {
  fill: none;
  stroke: #000;
  shape-rendering: crispEdges;
}

.x.axis path {
  display: none;
}

